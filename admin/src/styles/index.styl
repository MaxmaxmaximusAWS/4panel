@import "sanitize.css"
@import "fonts.styl"
@import "scrollbars.styl"

*
  flex-shrink 1
  margin 0
  padding 0

a
  color inherit

  &:visited
    color inherit

li
  list-style none

html
  size 100%

body
  size 100%
  overflow hidden


:global(#App)
  absolute top left
  size 100%
  display flex
  flex-direction column
  font-family "Gotham Pro"
  overflow hidden
  color white
  background-color #222



