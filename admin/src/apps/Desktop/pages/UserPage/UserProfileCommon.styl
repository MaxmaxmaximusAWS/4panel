.UserProfileCommon
  display flex
  flex-direction column
  flex-shrink 0

  .username
    text-align center
    margin-bottom 0.5em

  .id
    padding 0.5em
    margin 0.5em 0
    margin-top 1em
    background-color #202020
    border-radius 0.25em
    cursor pointer

    &:hover
      background-color #444

    .idText
      font-size 0.85em

  .avatar
    size 20em
    background-position center
    background-repeat no-repeat
    background-size cover

