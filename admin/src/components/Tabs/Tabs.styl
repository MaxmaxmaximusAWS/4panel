.Tabs
  $time = 0.3s
  background-color #333
  display flex
  flex-direction column
  border-radius 0.25em

  .titles
    display flex
    flex-direction row
    overflow hidden
    flex-shrink 0
    background-color #444
    justify-content center
    border-radius 0.25em 0.25em 0 0

  .tabsContainer
    transition min-width $time, min-height $time
    display flex
    justify-content center
    align-items center
    flex-grow 1
    position relative
    overflow hidden
    perspective 50em






